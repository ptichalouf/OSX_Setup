PATH=/Volumes/Android/bin:$PATH
echo
curl http://commondatastorage.googleapis.com/git-repo-downloads/repo > /Volumes/Android/bin/repo
echo
chmod a+x /Volumes/Android/bin/repo
echo
cd /Volumes/Android/OMNI/
echo
repo init -u git://github.com/omnirom/android.git -b android-4.3
echo

