# DO NOT EDIT THIS FILE OTHER THAN WHAT IS INSTRUCTED.
PATH=/Volumes/Android/bin:$PATH
echo
cd /Volumes/Android/LIQUID
echo
repo sync -j8
echo
export OUT_DIR=/Volumes/Android/OUT
echo
make clobber
echo
. build/envsetup.sh
echo
clear
echo "         ---This is where you choose your device config---"
lunch
echo
export OUT_DIR=/Volumes/Android/OUT
make otapackage -j8
echo
NOW=$(date +"%m-%d-%I-%M-%S")
ME=$(whoami)
#
# BELOW IS THE ONLY LINE YOU SHOULD BE EDITING. REPLACE *YOUR DEVICE* WHITH YOUR DEVICE'S CODE NAME. EX - NEXUS 7 = "grouper"
#
cp /Volumes/Android/OUT/target/product/*YOUR DEVICE*/liquid_*YOUR DEVICE*-ota-eng.$ME.zip /Volumes/Android/Builds/liquid_$ME.$NOW.zip
#
# DO NOT EDIT BELOW THIS LINE
#